<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Horoazhon.Features.Medecins.Views.AgentPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Horoazhon.Features.Medecins.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Shell="using:Horoazhon.Features.Shell.Views" 
    xmlns:local1="using:Horoazhon.Features.Medecins.Views" 
    xmlns:local2="using:Horoazhon.Features.Consultations.Views" 
    xmlns:local3="using:Horoazhon.Features.Clients.Views"
    xmlns:vm="using:Horoazhon.Features.Medecins.ViewModel"
    mc:Ignorable="d">

   <!-- <Page.DataContext>
        <vm:AgentViewModel/>
    </Page.DataContext>-->

    <Grid Padding="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1.5*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>



        <!--  Liste 
            <ListView ItemsSource="{Binding Medecins}" SelectedItem="{Binding MedecinSelected, Mode=TwoWay}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="5">
                            <TextBlock Text="{Binding IdpersNavigation.Nompers}" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Specialitemed}" FontStyle="Italic"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <TextBox Width="300" PlaceholderText="Rechercher un médecin..." 
                     Text="{Binding NomSearch, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
-->

        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,20,0">
            <TextBox Width="250"
                     PlaceholderText="Rechercher un médecin..."
                     Margin="0,0,0,10"
                     Text="{Binding NomSearch, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

            <ListView Height="300"
                      ItemsSource="{Binding Medecins}"
                      SelectedItem="{Binding MedecinSelected, Mode=TwoWay}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="5">
                            <TextBlock Text="{Binding IdpersNavigation.Nompers}" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Specialitemed}" FontStyle="Italic"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
        <!-- detailss -->
        <StackPanel Grid.Row="1" Grid.Column="1" Margin="20,0,0,0">
                <TextBlock Text="Informations du médecin" FontWeight="Bold" FontSize="16"/>
                <TextBox Header="Nom" Text="{Binding MedecinSelected.IdpersNavigation.Nompers, Mode=TwoWay}" />
                <TextBox Header="Prénom" Text="{Binding MedecinSelected.IdpersNavigation.Prenompers, Mode=TwoWay}" />
                <TextBox Header="Téléphone" Text="{Binding MedecinSelected.IdpersNavigation.Telpers, Mode=TwoWay}" />
                <TextBox Header="Email" Text="{Binding MedecinSelected.IdpersNavigation.Emailpers, Mode=TwoWay}" />
                <TextBox Header="Spécialité" Text="{Binding MedecinSelected.Specmedecin, Mode=TwoWay}" />
                <TextBox Header="NumSiret" Text="{Binding MedecinSelected.Numsiretmedecin, Mode=TwoWay}" />

            </StackPanel>

<!-- boutons -->
        <StackPanel Grid.Row="1" Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Top">
            <Button Content="Rechercher" Command="{Binding CommandMedecinSearch}"/>
            <Button Content="Nouveau" Command="{Binding CommandMedecinNew}"/>
            <Button Content="Enregistrer" Command="{Binding CommandMedecinSave}"/>
            <Button Content="Supprimer" Command="{Binding CommandMedecinDelete}"/>
            <Button Content="Annuler" Command="{Binding CommandMedecinCancel}" Margin="5"/>
        </StackPanel>

            
            

            <Grid Grid.Row="2" Grid.ColumnSpan="3" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <Expander Header="Rendes Vous" Grid.Column="0" IsExpanded="True" Margin="10,0,10,0">
                    <StackPanel Orientation="Horizontal">
                        <local:RdvListControl DataContext="{Binding RDVs}" />

                    </StackPanel>
                </Expander>


            <Expander Header="Consultations"   IsExpanded="True"  Grid.Column="1">
                <local:VisiteListControl HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" ItemsSource="{Binding Consultations}" SelectedItem="{Binding ConsultationSelected, Mode=TwoWay}" />
                </Expander>

            </Grid>
            
            
            
            
            
            
        </Grid>

</Page>
