    <Grid>
        <StackPanel Padding="32" Spacing="12" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Utilisateur" FontSize="28"/>
            <TextBox x:Name="LoginBox" Text="{Binding LoginSelected, Mode=TwoWay}" PlaceholderText="Login" Width="280"/>
            <PasswordBox x:Name="PwdBox"  Password="{Binding PasswordSelected, Mode=TwoWay}" Width="280"/>
            <TextBox x:Name="PinBox" PlaceholderText="Votre code pin" IsEnabled="{Binding IsEditable, Mode=TwoWay}" Text="{Binding CodePinSelected, Mode=TwoWay}" Width="280"/>
            <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                <Button Content="Obtenir le code Pin" IsEnabled="{Binding !IsEditable, Mode=TwoWay}" Command="{Binding CommandLogin}"/>
                <Button x:Name="BtnValider" Content="Se connecter" IsEnabled="{Binding IsEditable, Mode=TwoWay}" Click="BtnValider_Click"/>

            </StackPanel>
            <TextBlock x:Name="Info" Text="{Binding MessageInfo, Mode=TwoWay}" Foreground="Red" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
