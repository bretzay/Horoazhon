<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Horoazhon.Features.Rdvs.Views.RdvResumeIndisponibiliteControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Horoazhon.Features.Rdvs.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <StackPanel>
            <StackPanel>
                <Grid >
                    <StackPanel Margin="5">
                       
                        <TextBlock Text="{Binding RdvDate, Mode=TwoWay}" HorizontalAlignment="Left"/>
                        <TextBlock Text="{Binding RdvNomMedecin, Mode=TwoWay}" HorizontalAlignment="Left"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Disponible ?"/>
                            <CheckBox IsChecked="{Binding Disponibilite, Mode=TwoWay}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Raison : "/>
                            <TextBox Text="{Binding RdvCommentaire, Mode=TwoWay}" HorizontalAlignment="Left" MinWidth="200" />
                        </StackPanel>

                       
                    </StackPanel>


                </Grid>
            </StackPanel>
            <StackPanel Orientation="Horizontal"  >
                <Button Content="Enregistrer" Command="{Binding CommandRdvIndisponibiliteSave}" />
               
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
