<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Horoazhon.Features.Rdvs.Views.RdvPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Horoazhon.Features.Rdvs.Views"
    xmlns:vm="using:Horoazhon.Features.Rdvs.ViewModel"
    xmlns:local2="using:Horoazhon.Features.Agenda.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    mc:Ignorable="d">

    <Grid>

      

        <StackPanel Padding="20">
            <TextBlock Text="Sélectionnez un Client pour ouvrir la consultation!" Margin="0,0,0,10"/>
            <TextBlock Text="{Binding RdvDate}" />
            <TextBlock Text="{Binding RdvNomMedecin}" />

            <ComboBox ItemsSource="{Binding RdvClients}" 
                  SelectedItem="{Binding RdvClientselected, Mode=TwoWay}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock>
                        <Run Text="{Binding IdpersNavigation.Nompers}" />
                        <Run Text=" " />
                        <Run Text="{Binding IdpersNavigation.Prenompers}" />
                        </TextBlock>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <TextBox Text="{Binding RdvCommentaire, Mode=TwoWay}" PlaceholderText="Commentaire" Margin="0,10,0,0"/>

            <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
                <Button Content="Enregistrer" Command="{Binding CommandRdvSave}"/>
                <Button Content="Indisponibilité" Command="{Binding CommandRdvIndisponibiliteSave}"/>
                <Button Content="Supprimer" Command="{Binding CommandRdvDelete}"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Page>

