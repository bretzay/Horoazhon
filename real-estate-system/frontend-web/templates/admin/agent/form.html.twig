{% extends 'base.html.twig' %}

{% block title %}Nouvel Agent{% endblock %}

{% block body %}
<div class="page-header">
    <h1>Creer un nouvel agent</h1>
    <a href="{{ path('admin_agents') }}" class="btn btn-secondary">Retour</a>
</div>

<div class="card">
    <form method="post">
        <div class="form-row">
            <div class="form-group">
                <label for="prenom">Prenom *</label>
                <input type="text" id="prenom" name="prenom" required>
            </div>
            <div class="form-group">
                <label for="nom">Nom *</label>
                <input type="text" id="nom" name="nom" required>
            </div>
        </div>

        <div class="form-group">
            <label for="email">Email *</label>
            <input type="email" id="email" name="email" required>
        </div>

        <div class="form-group">
            <label for="password">Mot de passe *</label>
            <input type="password" id="password" name="password" required minlength="8">
            <small style="color: #64748b;">Minimum 8 caracteres</small>
        </div>

        <div class="form-group">
            <label for="role">Role *</label>
            <select id="role" name="role" required>
                <option value="AGENT">Agent</option>
                <option value="SUPERVISOR">Superviseur</option>
                <option value="ADMIN_AGENCY">Administrateur Agence</option>
            </select>
        </div>

        <div style="display: flex; gap: 0.5rem; margin-top: 1.5rem;">
            <button type="submit" class="btn btn-primary">Creer l'agent</button>
            <a href="{{ path('admin_agents') }}" class="btn btn-secondary">Annuler</a>
        </div>
    </form>
</div>

<div class="card" style="margin-top: 1rem; background: #fef3c7; border: 1px solid #fde68a;">
    <h3 style="color: #92400e; margin-bottom: 0.5rem;">Information importante</h3>
    <p style="color: #78350f; font-size: 0.9rem;">
        Le nouvel agent sera automatiquement lie a votre agence ({{ app.session.get('agent').agenceNom }}).
        Il pourra se connecter avec l'email et le mot de passe definis ci-dessus.
    </p>
</div>
{% endblock %}
