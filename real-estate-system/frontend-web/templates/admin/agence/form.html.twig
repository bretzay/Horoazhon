{% extends 'base.html.twig' %}

{% block title %}Admin - {{ agence ? 'Modifier' : 'Nouvelle' }} Agence{% endblock %}

{% block body %}
<div class="page-header">
    <h1>{{ agence ? 'Modifier Agence #' ~ agence.id : 'Nouvelle Agence' }}</h1>
    <a href="{{ path('admin_agences') }}" class="btn btn-secondary">Retour</a>
</div>

<div class="card">
    <form method="POST">
        <div class="form-row">
            <div class="form-group"><label>Nom *</label><input type="text" name="nom" value="{{ agence ? agence.nom : '' }}" required></div>
            <div class="form-group"><label>SIRET *</label><input type="text" name="siret" value="{{ agence ? agence.siret : '' }}" required maxlength="14" {{ agence ? 'readonly' : '' }}></div>
        </div>
        <div class="form-group"><label>NÂ° TVA</label><input type="text" name="numeroTva" value="{{ agence ? agence.numeroTva : '' }}"></div>
        <div class="form-row">
            <div class="form-group"><label>Rue *</label><input type="text" name="rue" value="{{ agence ? agence.rue : '' }}" required></div>
            <div class="form-group"><label>Ville *</label><input type="text" name="ville" value="{{ agence ? agence.ville : '' }}" required></div>
            <div class="form-group"><label>Code Postal *</label><input type="text" name="codePostal" value="{{ agence ? agence.codePostal : '' }}" required></div>
        </div>
        <div class="form-row">
            <div class="form-group"><label>Telephone</label><input type="text" name="telephone" value="{{ agence ? agence.telephone : '' }}"></div>
            <div class="form-group"><label>Email</label><input type="email" name="email" value="{{ agence ? agence.email : '' }}"></div>
        </div>
        <button type="submit" class="btn btn-primary">{{ agence ? 'Enregistrer' : 'Creer' }}</button>
    </form>
</div>
{% endblock %}
