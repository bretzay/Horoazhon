{% extends 'base.html.twig' %}

{% block title %}{{ bien.type ?? 'Bien' }} - {{ bien.ville }}{% endblock %}

{% block stylesheets %}
<style>
    .breadcrumb {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.85rem;
        color: #64748b;
        margin-bottom: 1.5rem;
    }
    .breadcrumb a { color: #64748b; }
    .breadcrumb a:hover { color: #2563eb; }
    .breadcrumb .sep { color: #cbd5e1; }

    .photo-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); gap: 0.75rem; }
    .photo-grid img {
        width: 100%;
        height: 220px;
        object-fit: cover;
        border-radius: 10px;
        cursor: pointer;
        transition: all 0.25s;
    }
    .photo-grid img:hover { opacity: 0.85; transform: scale(1.02); }

    .lightbox { display: none; position: fixed; inset: 0; background: rgba(0,0,0,0.9); z-index: 9999; align-items: center; justify-content: center; backdrop-filter: blur(4px); }
    .lightbox.active { display: flex; }
    .lightbox img { max-width: 90vw; max-height: 90vh; object-fit: contain; border-radius: 10px; box-shadow: 0 20px 60px rgba(0,0,0,0.5); }
    .lightbox-arrow {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background: rgba(255,255,255,0.1);
        color: #fff;
        border: none;
        font-size: 2.5rem;
        padding: 0.5rem 1rem;
        cursor: pointer;
        border-radius: 10px;
        user-select: none;
        transition: background 0.2s;
        backdrop-filter: blur(8px);
    }
    .lightbox-arrow:hover { background: rgba(255,255,255,0.2); }
    .lightbox-prev { left: 1rem; }
    .lightbox-next { right: 1rem; }
    .lightbox-close {
        position: absolute;
        top: 1rem;
        right: 1.5rem;
        background: rgba(255,255,255,0.1);
        border: none;
        color: #fff;
        font-size: 1.5rem;
        cursor: pointer;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: background 0.2s;
        backdrop-filter: blur(8px);
    }
    .lightbox-close:hover { background: rgba(255,255,255,0.2); }
    .lightbox-counter { position: absolute; bottom: 1.5rem; left: 50%; transform: translateX(-50%); color: rgba(255,255,255,0.7); font-size: 0.9rem; font-weight: 500; }

    .price-highlight {
        font-size: 1.5rem;
        font-weight: 800;
        letter-spacing: -0.5px;
    }
    .price-highlight.blue { color: #2563eb; }
    .price-highlight.green { color: #16a34a; }

    .eco-bar {
        height: 6px;
        border-radius: 3px;
        background: #e2e8f0;
        margin-top: 0.375rem;
        overflow: hidden;
    }
    .eco-bar-fill {
        height: 100%;
        border-radius: 3px;
        transition: width 0.5s ease;
    }
    .chip-list { display: flex; flex-wrap: wrap; gap: 0.5rem; }
    .chip {
        display: inline-flex;
        align-items: center;
        gap: 0.25rem;
        background: #f1f5f9;
        color: #475569;
        padding: 0.375rem 0.75rem;
        border-radius: 9999px;
        font-size: 0.8rem;
        font-weight: 500;
        border: 1px solid #e2e8f0;
    }
    .actions-bar {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }
</style>
{% endblock %}

{% block body %}
<div class="breadcrumb">
    <a href="{{ path('biens_list') }}">Biens</a>
    <span class="sep">/</span>
    <span>{{ bien.type ?? 'Bien' }} - {{ bien.ville }}</span>
</div>

<div class="page-header">
    <h1>{{ bien.type ?? 'Bien' }} - {{ bien.rue }}, {{ bien.ville }}</h1>
    <div class="actions-bar">
        {% set hasAchat = bien.availableForSale is defined and bien.availableForSale and bien.achat is defined and bien.achat %}
        {% set hasLocation = bien.availableForRent is defined and bien.availableForRent and bien.location is defined and bien.location %}
        {% set userPersonneId = app.session.get('user').personneId ?? null %}
        {% set isOwner = false %}
        {% if bien.proprietaires is defined %}
            {% for p in bien.proprietaires %}
                {% if p.personneId == userPersonneId %}
                    {% set isOwner = true %}
                {% endif %}
            {% endfor %}
        {% endif %}
        {% if app.session.get('user_role') != 'CLIENT' %}
            {% if hasAchat and hasLocation %}
                <a href="{{ path('admin_contrats_new', {achatId: bien.achat.id}) }}" class="btn btn-success">Contrat vente</a>
                <a href="{{ path('admin_contrats_new', {locationId: bien.location.id}) }}" class="btn btn-success">Contrat location</a>
            {% elseif hasAchat %}
                <a href="{{ path('admin_contrats_new', {achatId: bien.achat.id}) }}" class="btn btn-success">Nouveau contrat</a>
            {% elseif hasLocation %}
                <a href="{{ path('admin_contrats_new', {locationId: bien.location.id}) }}" class="btn btn-success">Nouveau contrat</a>
            {% endif %}
            {% if bien.id is defined %}
                <a href="{{ path('admin_biens_edit', {id: bien.id}) }}" class="btn btn-primary">Modifier</a>
            {% endif %}
        {% elseif isOwner and bien.id is defined %}
            <a href="{{ path('admin_biens_edit', {id: bien.id}) }}" class="btn btn-primary">Modifier</a>
        {% endif %}
        <a href="{{ path('biens_list') }}" class="btn btn-secondary">Retour</a>
    </div>
</div>

{% if bien.photos is defined and bien.photos|length > 0 %}
<div class="card">
    <h3>Photos</h3>
    <div class="photo-grid">
        {% for photo in bien.photos %}
            <img src="{{ photo.chemin }}" alt="Photo {{ loop.index }}" onclick="openLightbox({{ loop.index0 }})">
        {% endfor %}
    </div>
</div>

<div class="lightbox" id="lightbox" onclick="if(event.target===this)closeLightbox()">
    <button class="lightbox-close" onclick="closeLightbox()">&times;</button>
    <button class="lightbox-arrow lightbox-prev" onclick="navigateLightbox(-1)">&lsaquo;</button>
    <img id="lightbox-img" src="" alt="">
    <button class="lightbox-arrow lightbox-next" onclick="navigateLightbox(1)">&rsaquo;</button>
    <div class="lightbox-counter" id="lightbox-counter"></div>
</div>
<script>
    const lbPhotos = [{% for photo in bien.photos %}"{{ photo.chemin }}"{{ not loop.last ? ',' }}{% endfor %}];
    let lbIndex = 0;
    function openLightbox(i) {
        lbIndex = i;
        updateLightbox();
        document.getElementById('lightbox').classList.add('active');
    }
    function closeLightbox() {
        document.getElementById('lightbox').classList.remove('active');
    }
    function navigateLightbox(dir) {
        lbIndex = (lbIndex + dir + lbPhotos.length) % lbPhotos.length;
        updateLightbox();
    }
    function updateLightbox() {
        document.getElementById('lightbox-img').src = lbPhotos[lbIndex];
        document.getElementById('lightbox-counter').textContent = (lbIndex + 1) + ' / ' + lbPhotos.length;
    }
    document.addEventListener('keydown', function(e) {
        if (!document.getElementById('lightbox').classList.contains('active')) return;
        if (e.key === 'Escape') closeLightbox();
        if (e.key === 'ArrowLeft') navigateLightbox(-1);
        if (e.key === 'ArrowRight') navigateLightbox(1);
    });
</script>
{% endif %}

<div class="detail-grid">
    <div class="card">
        <h3>Informations</h3>
        <div class="detail-item"><div class="label">Adresse</div><div class="value">{{ bien.rue }}, {{ bien.codePostal }} {{ bien.ville }}</div></div>
        <div class="detail-item"><div class="label">Type</div><div class="value">{{ bien.type }}</div></div>
        <div class="detail-item"><div class="label">Superficie</div><div class="value">{{ bien.superficie }} m&sup2;</div></div>
        {% if bien.ecoScore %}
        <div class="detail-item">
            <div class="label">Eco Score</div>
            <div class="value">
                {{ bien.ecoScore }}/10
                <div class="eco-bar">
                    <div class="eco-bar-fill" style="width: {{ bien.ecoScore * 10 }}%; background: {% if bien.ecoScore >= 7 %}#16a34a{% elseif bien.ecoScore >= 4 %}#f59e0b{% else %}#dc2626{% endif %};"></div>
                </div>
            </div>
        </div>
        {% endif %}
        {% if bien.description %}<div class="detail-item"><div class="label">Description</div><div class="value">{{ bien.description }}</div></div>{% endif %}
    </div>

    <div>
        {% if bien.availableForSale and bien.achat %}
        <div class="card">
            <h3>Vente</h3>
            <div class="detail-item">
                <div class="label">Prix</div>
                <div class="value price-highlight blue">{{ bien.achat.prix|number_format(0, ',', ' ') }} &euro;</div>
            </div>
            <div class="detail-item">
                <div class="label">Disponibilite</div>
                <div class="value">
                    {% if bien.achat.dateDispo|date('Y-m-d') <= "now"|date('Y-m-d') %}
                        <span class="badge badge-signe">Disponible</span>
                    {% else %}
                        <span class="badge badge-en_cours">Disponible le {{ bien.achat.dateDispo|date('d/m/Y') }}</span>
                    {% endif %}
                </div>
            </div>
        </div>
        {% endif %}

        {% if bien.availableForRent and bien.location %}
        <div class="card">
            <h3>Location</h3>
            <div class="detail-item">
                <div class="label">Loyer</div>
                <div class="value price-highlight green">{{ bien.location.mensualite|number_format(0, ',', ' ') }} &euro;/mois</div>
            </div>
            <div class="detail-item"><div class="label">Caution</div><div class="value">{{ bien.location.caution|number_format(0, ',', ' ') }} &euro;</div></div>
            <div class="detail-item">
                <div class="label">Disponibilite</div>
                <div class="value">
                    {% if bien.location.dateDispo|date('Y-m-d') <= "now"|date('Y-m-d') %}
                        <span class="badge badge-signe">Disponible</span>
                    {% else %}
                        <span class="badge badge-en_cours">Disponible le {{ bien.location.dateDispo|date('d/m/Y') }}</span>
                    {% endif %}
                </div>
            </div>
            {% if bien.location.dureeMois %}<div class="detail-item"><div class="label">Duree</div><div class="value">{{ bien.location.dureeMois }} mois</div></div>{% endif %}
        </div>
        {% endif %}

        {% if bien.agence is defined and bien.agence %}
        <div class="card">
            <h3>Agence</h3>
            <div class="detail-item"><div class="label">Nom</div><div class="value">{{ bien.agence.nom }}</div></div>
        </div>
        {% endif %}
    </div>
</div>

{% if bien.caracteristiques is defined and bien.caracteristiques|length > 0 %}
<div class="card">
    <h3>Caracteristiques</h3>
    <div class="chip-list">
        {% for c in bien.caracteristiques %}
            <span class="chip">{{ c.lib }}: {{ c.valeur }}{% if c.unite %} {{ c.unite }}{% endif %}</span>
        {% endfor %}
    </div>
</div>
{% endif %}

{% if bien.lieux is defined and bien.lieux|length > 0 %}
<div class="card">
    <h3>Proximite</h3>
    <table>
        <tr><th>Lieu</th><th>Temps</th><th>Mode</th></tr>
        {% for l in bien.lieux %}
        <tr><td>{{ l.lib }}</td><td>{{ l.minutes }} min</td><td>{{ l.typeLocomotion ?? '-' }}</td></tr>
        {% endfor %}
    </table>
</div>
{% endif %}

{% endblock %}
